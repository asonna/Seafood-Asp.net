@{
    ViewData["Title"] = "Member";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model SonOfCodSeafood.Models.Member


<h2>Add user contacts to join our newsletter memberlist</h2>
<hr />

<h3>New member</h3>
<br> 
    @using (Html.BeginForm())
    { 
    <div class="row">

        <div class="col-xs-6">
            @Html.LabelFor(model => model.Email)
            @Html.TextBoxFor(model => model.Email)
        </div>

        <div class="col-xs-6">
            @Html.LabelFor(model => model.Name)
            @Html.TextBoxFor(model => model.Name)
        </div>
        <div class="col-xs-6">
            @Html.LabelFor(model => model.Phone)
            @Html.TextBoxFor(model => model.Phone)
        </div>
        <div class="col-xs-6">
            @Html.LabelFor(model => model.Birthdate)
            @Html.TextBoxFor(model => model.Birthdate)
        </div>

</div>
    <br /><br /><p><input type="submit" value="enter member details" class="btn btn-default" /></p>
}
    <hr />
    <button class="btn btn-default">@Html.ActionLink("Back to newsletter memberlist", "Index")</button><hr />